# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~


GET     /                                     controllers.HomeController.index()
GET     /deployment                           controllers.DeploymentController.listArtifacts()
GET     /deployment/list-configs/:artifact    controllers.DeploymentController.listDeploymentConfiguration(artifact: String)
GET     /deployment/configure/:artifact/:cfg  controllers.DeploymentController.configureDeployment(artifact: String, cfg: String)
POST    /deployment/proceed/:artifact         controllers.DeploymentController.doDeploy(artifact: String)

GET     /emr/applications/all                      controllers.ManagedAppsController.listApplications()
GET     /emr/applications/:appId                   controllers.ManagedAppsController.appDetails(appId: String)
GET     /emr/applications/:appId/clear-checkpoints controllers.ManagedAppsController.clearCheckpoints(appId: String)

GET     /emr/restart/force    controllers.DeploymentController.autoRestart()
GET     /emr/restart/history  controllers.DeploymentController.restartHistory()

GET     /help                           controllers.HelpController.help()

GET     /testing/step-log               controllers.TestingController.testStepLog()
GET     /testing/jar                    controllers.TestingController.jarTest()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /feeds/emr-restarts.xml        controllers.FeedController.emrRestartsHistory()
GET     /feeds/emr-healthchecks.xml    controllers.FeedController.healthcheckFailsHistory()
GET     /feeds/app-events.xml          controllers.FeedController.genericAppEvents
